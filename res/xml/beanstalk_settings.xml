<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/beanstalk_settings_title" >

    <!-- Interface -->
    <PreferenceScreen
        android:id="@+id/interface_settings"
        android:title="@string/interface_settings_title"
        android:fragment="com.android.settings.beanstalk.InterfaceSettings" /> 

    <!-- Status bar -->
    <PreferenceScreen
        android:id="@+id/statusbar_settings"
        android:title="@string/statusbar_settings_title"
        android:fragment="com.android.settings.beanstalk.StatusBarSettings" />

    <PreferenceScreen
        android:key="quick_settings"
        android:fragment="com.android.settings.beanstalk.QsSettings"
        android:title="@string/qs_title" />

    <PreferenceScreen
        android:key="navigation_bar"
        android:fragment="com.android.settings.beanstalk.navbar.NavbarTabHostFragment"
        android:title="@string/category_navbar" />

    <!-- Display settings -->
    <PreferenceScreen
        android:id="@+id/bsdisplay_settings"
        android:title="@string/bs_display_settings_title"
        android:fragment="com.android.settings.beanstalk.BSDisplaySettings" />

    <!-- Lockscreen settings -->
    <PreferenceScreen
	android:id="@+id/bs_lockscreen_settings"
	android:title="@string/bs_lockscreen_title"
	android:fragment="com.android.settings.beanstalk.BSLockscreen" />

    <!-- Sound settings -->
    <PreferenceScreen
        android:id="@+id/bs_sound_settings"
        android:title="@string/sound_title"
        android:fragment="com.android.settings.beanstalk.SoundSettings" />

    <!-- Power menu settings -->
    <PreferenceScreen
	android:id="@+id/power_menu_settings"
	android:title="@string/power_menu_settings"
	android:fragment="com.android.settings.beanstalk.PowerMenuSettings" />

    <PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:fragment="com.android.settings.beanstalk.hfm.HfmSettings" />

    <PreferenceScreen
	android:id="@+id/performance_controls"
	android:fragment="com.brewcrewfoo.performance.activities.MainActivity"
	android:title="@string/performance_settings" />

</PreferenceScreen>
